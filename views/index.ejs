<!DOCTYPE html>
<html lang="en">
  <%- include ('./partials/head') -%>
  <body>
    <header>
      <%- include ('./partials/header-content') -%>
    </header>
    <main>
      <a class="button new-message" href="/new" target="_self"><span class="fas fa-plus"></span> New</a>
      <div class="msg-board">
        <% messages.forEach(message => { %>
          <div class="msg-card">
            <div class="msg-card-header">
              <span class="username"><%= message.user %></span><span class="timestamp"><%= message.timestamp.toLocaleString() %></span>
            </div>
            <div class="message"><%= message.message %></div>
          </div>
        <% }); %>
      </div>
    </main>
    <%- include ('./partials/footer') -%>
  </body>
</html>
