<header>
  <%- include ('./partials/header-content') -%>
  <h2><%= title %></h2>
</header>
<main>
  <form class="new-message-form" method="post" novalidate>
    <div class="form-group">
      <label for="user-input">User</label>
      <input type="text" name="user" value="<%= typeof data !== 'undefined' ? data.user : '' %>" id="user-input" autocomplete="username" required />  
    </div>
    <div class="form-group">
      <label for="message-input">Message</label>
      <textarea name="message" rows="8" id="message-input" autocomplete="off" required><%= typeof data !== 'undefined' ? data.message : '' %></textarea>
    </div>
    <div class="button-group">
      <button type="submit" class="button submit">Post</button>
      <a class="button cancel" href="/" target="_self">Cancel</a>
    </div>
  </form>
  <% if (typeof errorMessage !== 'undefined') { %>
    <p class="message error-message"><span class="fa-solid fa-circle-exclamation fa-lg fa-fw" aria-hidden="true"></span> <%= errorMessage %></p>
  <% } %> 
</main>
